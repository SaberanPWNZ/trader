# Crypto AI Trading Bot - Environment Variables
# Copy this file to .env and fill in your values

# Exchange Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Telegram Notifications
TELEGRAM_ENABLED=true
TELEGRAM_COMMANDS_ENABLED=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# PostgreSQL Database
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql+asyncpg://trader:${POSTGRES_PASSWORD}@postgres:5432/trading_bot

# Legacy SQLite (for migration reference)
SQLITE_DB_PATH=data/learning.db

# Training Configuration
TRAINING_INTERVAL_HOURS=4
